                <h2>JEWELLERY BOX</h2>
                <h3>ALL IN ONE BOX</h3>
                <button onclick="window.location.href='/products'">CHECK NOW</button>
            </div>
        </section>

        <section class="new-arrivals fade-in">
            <h2>New Arrivals</h2>
            <div class="products-grid">
                <% if (products && products.length> 0) { %>
                    <% products.slice(10, 14).forEach(product=> { %>
                        <div class="product-item" onclick="window.location.href='/products'">
