            <p id="tagline">Discover our most loved and timeless designs.</p>
            <div class="slider-wrapper">
                <div class="feature-cont slider-track">
                    <% products.forEach(product=> { %>
                        <div class="box" onclick="window.location.href='/products'">
                            <div class="image" onclick="window.location.href='/products'">
                                <img src="http://localhost:3000/JewelryImages/<%= product.image %>"
